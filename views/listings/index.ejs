<% layout('/layouts/boilerplate') -%>

  <style>
    .filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin-left: 1rem;
      margin-top: 1rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;

    }
    .tax-switch{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 10rem;
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }
    .tax-info{
      display : none;
    }
  </style>

  <div class="filters">
    <div class="filter">
      <div class="filter-image">
        <i class="fa-solid fa-fire" style="color: #151514"></i>
      </div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-umbrella-beach" style="color: #000000"></i>
      </div>
      <p>Beach</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-bed" style="color: #000000"></i>
      </div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-key" style="color: #0d0d0d"></i>
      </div>
      <p>New</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain-city" style="color: #000000"></i>
      </div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-person-swimming" style="color: #000000"></i>
      </div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-campground" style="color: #000000"></i>
      </div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-cow" style="color: #000000"></i>
      </div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-brands fa-fort-awesome" style="color: #000000"></i>
      </div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-ship" style="color: #000000"></i>
      </div>
      <p>Boats</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-igloo" style="color: #000000"></i>
      </div>
      <p>Domes</p>
    </div>

    <div class="tax-switch">
      <div class="form-check-reverse   form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after tax</label>
      </div>
    </div>
  </div>
  <!--         
<form method="GET" action="/listings/new">
    <button>Create new Listing</button>
</form> -->
  <div class="row row-cols-lg-3 row-col-mid-2 row-cols-1 g-4">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%= listing.id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem">
          <div class="card-img-overlay"></div>

          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b> <br>
              â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info"> &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>

      <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      console.log("check box is cheked");
      let taxInfo = document.getElementsByClassName("tax-info"); 
      for(let info of taxInfo){
        if(info.style.display != "inline"){
          info.style.display = "inline";
        }else{
          info.style.display = "none";
        }
      }
    });
  </script>